{
    "manifest_version": 3,
    "name": "Twitter Extras",
    "version": "1.0",
    "icons": {
        "64": "icons/icon64.png"
    },
    "description": "Adds some extra features to Twitter, including video download and picture-in-picture.",
    "permissions": ["downloads", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://twitter.com/*"]
}
