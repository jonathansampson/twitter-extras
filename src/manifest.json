{
    "manifest_version": 3,
    "name": "Twitter Extras",
    "version": "3.2.3",
    "icons": {
        "64": "icons/icon64.png"
    },
    "description": "Adds some extra features to Twitter, including video download, picture-in-picture, and more.",
    "permissions": ["downloads", "scripting", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["https://twitter.com/*"],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
